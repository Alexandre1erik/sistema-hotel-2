<header class="p-3 bg-dark text-white">
  <nav class="py-2 navbar-dark bg-dark">
    <div class="container">
      <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
        <a href="/app/assets/config" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
          <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap"><use xlink:href="#bootstrap"></use></svg>
        </a>

        <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
          <li>
            <% if user_signed_in? %>
              <%= link_to "Dashboard", dashboard_index_path, :class => "nav-link px-2 text-white" %>
            <% else %>
              <%= link_to "Home", root_path, :class => "nav-link px-2 text-white" %>
            <% end %>
          </li>
          <li><a href="#" class="nav-link px-2 text-white">Rooms</a></li>
          <li><a href="#" class="nav-link px-2 text-white">Services</a></li>
          <li><a href="#" class="nav-link px-2 text-white">Blog</a></li>
          <li><a href="#" class="nav-link px-2 text-white">Events</a></li>
        </ul>

        <div class="form-group col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3">
          <input type="search" class="form-control form-control-dark" placeholder="Search..." aria-label="Search">
        </div>

        <div class="text-end">
          <% if user_signed_in? %>
            <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
              <li>
                <%= button_to "Sign out", destroy_user_session_path, method: :delete, data: { turbo: false }, :class => "btn btn-warning" %>
              </li>
            </ul>
          <% else %>
            <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0"">
            <li>
              <%= link_to "Login", new_user_session_path,  data: { turbo: false }, :class => "btn btn-outline-light me-2" %>
            </li>
            <li>
              <%= link_to "Sign Up", new_user_registration_path,  data: { turbo: false }, :class => "btn btn-warning" %>
            </li>
            </ul>
          <% end %>
        </div>
      </div>
    </div>
  </nav>
</header>