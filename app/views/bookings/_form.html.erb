<div class="">
  <%= form_with(model: booking) do |form| %>
    <%= render "layouts/nav/validation", item: @booking %>

    <div  class="form-group">
      <%= form.label :room_id, style: "display: block" %>
      <%= form.collection_select(:room_id, Room.all, :id, :name,{:selected => @booking.room_id}, class: "form-control")%>
    </div>

    <div  class="form-group">
      <%= form.label :check_in, style: "display: block" %>
      <%= form.date_field :check_in, :value => params[:check_in], class: "form-control" %>
    </div>

    <div  class="form-group">
      <%= form.label :check_out, style: "display: block" %>
      <%= form.date_field :check_out, :value => params[:check_out], class: "form-control" %>
    </div>

    <div  class="form-group">
      <%= form.label :guests, style: "display: block" %>
      <%= form.select(:guests, options_for_select([['1', 1], ['2', 2], ['3', 3], ['4', 4]]), {}, {class: "form-control"}) %>
    </div>

    <br>

    <div  class="form-group">
      <%= form.submit "Cadastrar", class:  "btn btn-success btn-lg" %>
    </div>
  <% end %>
</div>
