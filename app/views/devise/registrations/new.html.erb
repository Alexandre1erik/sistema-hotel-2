<section class="form-auth text-center">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <!-- <img class="mb-4" src="" alt="" width="72" height="57"> --->
    <h1 class="h3 mb-3 fw-normal">Cadastrar Conta</h1>

    <div class="form-floating">
      <%= f.text_field :first_name, autofocus: true, class: "form-control", id: "inputFirst_Name", placeholder: "First Name", autocomplete: "new-firt_name" %>
      <label for="floatingInput">Nome</label>
    </div>

    <div class="form-floating">
      <%= f.text_field :last_name, autofocus: true, class: "form-control", id: "inputLast_Name", placeholder: "Last Name", autocomplete: "new-last_name" %>
      <label for="floatingInput">Sobrenome</label>
    </div>

    <div class="form-floating">
      <%= f.text_field :cpf, autofocus: true, class: "form-control", id: "inputCPF", placeholder: "XXX.XXX.XXX-XX", autocomplete: "new-cpf" %>
      <label for="floatingInput">CPF</label>
    </div>

    <div class="form-floating">
      <%= f.date_field :birthday, autofocus: true, class: "form-control", id: "inputBirthday", placeholder: "CPF", autocomplete: "new-birthday" %>
      <label for="floatingInput">Data de Nascimento</label>
    </div>

    <div class="form-floating">
      <%= f.select :role, User.roles.keys, {}, {class: ["custom-select", "custom-select-sm", "form-control", "form-control-sm"]} %>
      <label for="floatingInput">Tipo</label>
    </div>

    <div class="form-floating">
      <%= f.email_field :email, autofocus: true, class: "form-control", id: "inputEmail", placeholder: "Email address", autocomplete: "new-email" %>
      <label for="floatingInput">Email</label>
    </div>

    <div class="form-floating">
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "form-control", id: "inputPassword" %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <label for="floatingPassword">Senha</label>
    </div>

    <div class="form-floating">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password", class: "form-control", id: "inputPassword" %>
      <label for="floatingPassword">Confirme a Senha</label>
    </div>

    <div class="checkbox mb-3">
      <label>
        <input type="checkbox" value="remember-me"> Mantenha-me conectado
      </label>
    </div>
    <button class="w-100 btn btn-lg btn-primary" type="submit">Cadastrar</button>
    <p class="mt-5 mb-3 text-muted">© 2021–2022</p>
  <% end %>

  <%= render "devise/shared/links" %>

</section>
